<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
    <supports-screens 
        tools:node="replace"
        android:smallScreens="true"
        android:normalScreens="true"
        android:largeScreens="true"
        android:xlargeScreens="true" />
    <uses-feature android:glEsVersion="0x00030000" android:required="true" />
    <uses-feature tools:node="replace" android:name="android.hardware.vr.headtracking" android:required="true" android:version="1" />
    <instrumentation
        tools:node="replace"
        android:name=".GodotInstrumentation"
        android:icon="@mipmap/icon"
        android:label="@string/godot_project_name_string"
        android:targetPackage="uk.co.electronstudio.scaryskeletons2" />
    <application android:label="@string/godot_project_name_string"
        android:allowBackup="false" tools:ignore="GoogleAppIndexingWarning"
        tools:replace="android:requestLegacyExternalStorage"         android:requestLegacyExternalStorage="false"
        android:icon="@mipmap/icon">

        <meta-data tools:node="remove" android:name="xr_mode_metadata_name" />
        <meta-data tools:node="replace" android:name="com.samsung.android.vr.application.mode" android:value="vr_only" />
        <activity android:name="com.godot.game.GodotApp" tools:replace="android:screenOrientation" android:screenOrientation="landscape">
            <meta-data tools:node="replace" android:name="com.oculus.vr.focusaware" android:value="false" />
        </activity>
    </application>
</manifest>
